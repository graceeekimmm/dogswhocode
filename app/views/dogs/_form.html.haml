= simple_form_for @dog, html: { multipart: true } do |f|
	- if @dog.errors.any?
		#errors
			%h2
				= pluralize(@dog.errors.count, "error")
				prevented this dog from saving
			%ul
				- @dog.errors.full_messages.each do |msg|
					%li= msg

	.form-group
		= f.input :image, input_html: { class: 'form-control' }

	.form-group
		= f.input :title, input_html: { class: 'form-control' }

	.form-group
		= f.input :description, input_html: { class: 'form-control' }

	.form-group
		= f.input :document, input_html: { class: 'form-control' }


	= f.button :submit, class: "btn btn-primary"